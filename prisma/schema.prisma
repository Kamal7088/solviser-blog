generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}  
model Blog {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  excerpt       String?
  content       String
  author        String
  featuredImage String?   // ğŸ–¼ Hero image
  seoTitle      String?   // ğŸ” SEO title
  seoDescription String? // ğŸ” Meta description
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
